	<script type="text/javascript">
	
	//var xhr = null;
	
	
	
	function getXhr(){
		var xhr = null;
		try{
			xhr = new XMLHttpRequest();
		}catch(e){
			alert("your browser has a problem");
		}
		if(xhr=='undefined' || xhr == null){
			xhr = new ActivateXObject("Msxml2.XMLHTTP3.0");
		}
		return xhr;
	}
	
	var baseUrl = "https://reqres.in/api/";
	var users = [];
	
	function displayAllUsers(){
		console.log('Displaying all users');
		console.log(users);
		var usersData = document.getElementById('usersData');
		var str = '';
		//var data = dao.getAllContacts();
		for(var i=0; i<users.length; i++){
			var user = data[i];
			str += "<tr><td>" + usersData.name + "</td>";
			str += "<td>" + contact.mobile + "</td>";
			str += "<td><button type='button' class='btn btn-danger' onclick='deleteContact("+i+")'>Delete</button>"
		}
		usersData.innerHTML = str;
	}
	
	function getAllUsers(){
		var xhr = getXhr();
		console.log(xhr);
		var url = baseUrl + "users";
			xhr.onreadystatechange = function(){
			if(xhr.readyState == 4 && xhr.status >=200){
				var response = JSON.parse(xhr.responseText);
				users = response.data;
				console.log(users);
				displayAllUsers();
			}
		}
		xhr.open("GET",url,true);
		xhr.send();
	}
	
	function getUserById(){
		var xhr = getXhr();
		var id = 1;
		console.log(xhr);
		var url = baseUrl + "users/"+ id;
			xhr.onreadystatechange = function(){
			if(xhr.readyState == 4 && xhr.status >=200){
				console.log(JSON.parse(xhr.responseText));
			}
		}
		xhr.open("GET",url,true);
		xhr.send();
	}
	
	function deleteUser(){
		var xhr = getXhr();
		var id = 1;
		//console.log(xhr);
		var url = baseUrl + "users/"+ id;
			xhr.onreadystatechange = function(){
			if(xhr.readyState == 4 && xhr.status ==204){
				console.log('DELETED');
			}
		}
		xhr.open("DELETE",url,true);
		xhr.send();
	}
	
	function updateUser(){
		var xhr = getXhr();
		var id = 1;
		console.log(xhr);
		var dataModified = {
			    "name": "morpheus",
			    "job": "zion resident"
			};
		var url = baseUrl + "users/"+ id;
			xhr.onreadystatechange = function(){
			if(xhr.readyState == 4 && xhr.status >=200){
				console.log(JSON.parse(xhr.responseText));
			}
		}
		xhr.open("PUT",url,true);
		xhr.send(dataModified);
	}
	
	function addUser(){
		var xhr = getXhr();
		//var id = 1;
		console.log(xhr);
		var dataToAdd = {
			    "name": "morpheus",
			    "job": "zion resident"
			};
		var url = baseUrl + "users/";
			xhr.onreadystatechange = function(){
			if(xhr.readyState == 4 && xhr.status >=200){
				console.log(JSON.parse(xhr.responseText));
			}
		}
		xhr.open("POST",url,true);
		xhr.send(dataToAdd);
	}
	
