	<input id="search" placeholder="enter search id"/>
	<hr>
	
	<div id="usersData" class='row'>
		
	</div>
	<script type="text/javascript">
	
	//var xhr = null;
	
	/*
	<div class="card" style="width: 18rem">
		<img class="card-img-top" src="https://s3.amazonaws.com/uifaces/faces/twitter/calebogden/128.jpg" alt="George">
			
			<div class="card-body">
				<h5 class="card-title">George<small>Bluth</small></h5>
				
			</div>
		</div>
	*/
	
	function getXhr(){
		var xhr = null;
		try{
			xhr = new XMLHttpRequest();
		}catch(e){
			alert("your browser has a problem");
		}
		if(xhr=='undefined' || xhr == null){
			xhr = new ActivateXObject("Msxml2.XMLHTTP3.0");
		}
		return xhr;
	}
	
	var baseUrl = "https://reqres.in/api/";
	var users = [];
	
	function displayAllUsers(){
		console.log('Displaying all users');
		console.log(users);
		var usersData = document.getElementById('usersData');
		var str = '';
		//var data = dao.getAllContacts();
		/*
		<img class="card-img-top" src="https://s3.amazonaws.com/uifaces/faces/twitter/calebogden/128.jpg" alt="George">
			
			<div class="card-body">
				<h5 class="card-title">George <small>Bluth</small></h5>
				
			</div>
		</div>
		*/
		for(var i=0; i<users.length; i++){
			var user = users[i];
			str += '<div class="col-md-4 col-sm-6" style="margin-bottom:5px;">';
			str += "<div class=\"card\" style=\"width: 18rem\">";
			str += "<img class=\"card-img-top\" src=\""+user.avatar+"\" alt=\""+user.first_name+"\">";
			str += "<div class=\"card-body\">";
			str += '<h5 class="card-title">'+user.first_name+' <small>'+user.last_name+'</small></h5>';
			
			str += '</div></div></div>'
		}
		usersData.innerHTML = str;
	}
	
	function getAllUsers(){
		var xhr = getXhr();
		console.log(xhr);
		var url = baseUrl + "users";
			xhr.onreadystatechange = function(){
			if(xhr.readyState == 4 && xhr.status >=200){
				var response = JSON.parse(xhr.responseText);
				users = response.data;
				console.log(users);
				displayAllUsers();
			}
		}
		xhr.open("GET",url,true);
		xhr.send();
	}
	
	function getUserById(){
		var xhr = getXhr();
		var id = document.getElementById('search').value;
		console.log(xhr);
		var url = baseUrl + "users/"+ id;
			xhr.onreadystatechange = function(){
			if(xhr.readyState == 4 && xhr.status >=200){
				var user = JSON.parse(xhr.responseText).data;
				console.log(user);
				displayUser(user);
			}
		}
		xhr.open("GET",url,true);
		xhr.send();
	}
	
	function deleteUser(){
		var xhr = getXhr();
		var id = 1;
		//console.log(xhr);
		var url = baseUrl + "users/"+ id;
			xhr.onreadystatechange = function(){
			if(xhr.readyState == 4 && xhr.status ==204){
				console.log('DELETED');
			}
		}
		xhr.open("DELETE",url,true);
		xhr.send();
	}
	
	function updateUser(){
		var xhr = getXhr();
		var id = 1;
		console.log(xhr);
		var dataModified = {
			    "name": "morpheus",
			    "job": "zion resident"
			};
		var url = baseUrl + "users/"+ id;
			xhr.onreadystatechange = function(){
			if(xhr.readyState == 4 && xhr.status >=200){
				console.log(JSON.parse(xhr.responseText));
			}
		}
		xhr.open("PUT",url,true);
		xhr.send(dataModified);
	}
	
	function addUser(){
		var xhr = getXhr();
		//var id = 1;
		console.log(xhr);
		var dataToAdd = {
			    "name": "morpheus",
			    "job": "zion resident"
			};
		var url = baseUrl + "users/";
			xhr.onreadystatechange = function(){
			if(xhr.readyState == 4 && xhr.status >=200){
				console.log(JSON.parse(xhr.responseText));
			}
		}
		xhr.open("POST",url,true);
		xhr.send(dataToAdd);
	}
	
	</script>
