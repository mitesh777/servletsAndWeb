<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>jquery</title>
</head>
<body>
	
	<div>One</div>
	<div>two</div>
	<div>three</div>
	<div>four</div>
	<div>five</div>
	
	<button id="hide">Hide</button>
	<button id="show">Show</button>
	<script type="text/javascript">
	function hide(){
		var divs = document.getElementsByTagName("div");
		for(var i=0;i<divs.length;i++){
			var d= divs[i];
			d.style.display = 'none';
		}
	}
	
	function show(){
		var divs = document.getElementsByTagName("div");
		for(var i=0;i<divs.length;i++){
			var d= divs[i];
			d.style.display = 'block';
		}
	}
	</script>
</body>
</html>