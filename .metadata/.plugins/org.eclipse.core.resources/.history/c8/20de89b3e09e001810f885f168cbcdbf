<h1>welcome to js</h1>
	

	<script type="text/javascript">
	function Employee(_name,_id,_basic){
		this.name = _name;
		this.id = _id;
		this.basic = _basic;
		this.hra = 0;
		this.pf = 0;
		
		this.getTotalSalary = function(){
			this.hra = this.basic * 0.08;
			this.pf = this.basic * 0.12;
			return (this.basic + this.hra) - this.pf;
		}
	};
	
	
	var emp = new Employee('hello',12,41000);
	
	console.log(emp);
	console.log(emp.getTotalSalary());	
	console.log(emp);
	
	</script>
