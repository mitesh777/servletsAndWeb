	<script type="text/javascript">
	var Employee = function(){
		var name = '';
		var basic = 0;
		var pf = 0;
		
		var setName = function(_name){
			name=_name;
		}

		var setBasic = function(_basic){
			basic=_basic;
		}
		
		var getName = function(){
			return name;
		}
		var getBasic = function(){
			return basic;
		}
		
		var getTotalSalary = function(){
			return basic + (basic*0.8);
		}
		
		return {
			setName : setName;
			setBasic : setBasic;
			getName : getName;
			getBasic : getBasic;
			getTotal : getTotalSalary;
		}
	}
	var e1 = new Employee();
	e1.setName("Shashi");
	e1.setBasic(4500);
	console.log(e1);
	console.log(e1.getTotalSalary());
	console.log(e1);
	
	</script>
